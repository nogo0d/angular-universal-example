{
    "name": "ng-universal-demo",
    "version": "0.0.0",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/angular/universal-starter.git"
    },
    "contributors": [
        "AngularClass <hello@angularclass.com>",
        "PatrickJS <patrick@angularclass.com>",
        "Jeff Whelpley <jeff@gethuman.com>",
        "Jeff Cross <crossj@google.com>",
        "Mark Pieszak <mpieszak84@gmail.com>",
        "Jason Jean <jasonjean1993@gmail.com>",
        "Fabian Wiles <fabian.wiles@gmail.com>"
    ],
    "scripts": {
        "ng": "ng",
        "start": "ng serve",
        "build": "ng build",
        "lint": "ng lint --fix",

        "build:client-and-server-bundles-prod": "ng build --deploy-url=https://static.example.com/ --env=prod --prod && ng build --env=prod --prod --app 1 --output-hashing=false",
        "build:client-and-server-bundles-dev": "ng build --deploy-url=http://static.dev.example.com/ --env=dev --prod && ng build --env=dev --prod --app 1 --output-hashing=false",
        "build:client-and-server-bundles-local": "ng build --deploy-url=http://static.local.example.com/ --env=local --prod && ng build --env=local --prod --app 1 --output-hashing=false",
        
        "build:ssr-prod": "npm run build:client-and-server-bundles-prod; npm run webpack:server",
        "build:ssr-dev": "npm run build:client-and-server-bundles-dev; npm run webpack:server",
        "build:ssr-local": "npm run build:client-and-server-bundles-local; npm run webpack:server",

        "webpack:server": "webpack --config webpack.server.config.js --progress --colors",

        "serve:ssr-local": "export ENV=\"local\"; node dist/server",
        "serve:ssr-dev": "export ENV=\"dev\"; node dist/server",
        "serve:ssr-prod": "export ENV=\"prod\"; node dist/server",

        "build-dev": "yarn build:ssr-dev",

        "start-local": "yarn serve:ssr-local",
        "start-dev": "yarn serve:ssr-dev",
        "start-prod": "yarn serve:ssr-prod"
    },
    "pre-commit": [
        "lint"
    ],
    "private": true,
    "dependencies": {
        "@angular/animations": "^5.0.0",
        "@angular/common": "^5.0.0",
        "@angular/compiler": "^5.0.0",
        "@angular/core": "^5.0.0",
        "@angular/forms": "^5.0.0",
        "@angular/http": "^5.0.0",
        "@angular/platform-browser": "^5.0.0",
        "@angular/platform-browser-dynamic": "^5.0.0",
        "@angular/platform-server": "^5.2.5",
        "@angular/router": "^5.0.0",
        "@nguniversal/common": "^5.0.0-beta.5",
        "@nguniversal/express-engine": "^5.0.0-beta.5",
        "@nguniversal/module-map-ngfactory-loader": "^5.0.0-beta.5",
        "core-js": "^2.4.1",
        "express-beautify": "^0.1.3",
        "rxjs": "^5.5.2",
        "zone.js": "^0.8.14"
    },
    "devDependencies": {
        "@angular/cli": "^1.5.0",
        "@angular/compiler-cli": "^5.0.0",
        "@angular/language-service": "^5.0.0",
        "@types/node": "^8.0.30",
        "codelyzer": "^4.0.2",
        "cpy-cli": "^1.0.1",
        "express": "^4.15.2",
        "http-server": "^0.10.0",
        "pre-commit": "^1.2.2",
        "reflect-metadata": "^0.1.10",
        "ts-loader": "^3.5.0",
        "tslint": "^5.7.0",
        "typescript": "~2.4.2"
    }
}
